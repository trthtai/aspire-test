{
	"name": "aspiretest",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"start": "react-native start",
		"test": "jest",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx"
	},
	"dependencies": {
		"@react-navigation/native": "^6.0.6",
		"@react-navigation/stack": "^6.0.11",
		"react": "17.0.2",
		"react-native": "0.66.3"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/runtime": "^7.12.5",
		"@react-native-community/eslint-config": "^2.0.0",
		"@types/eslint": "^8.2.0",
		"@types/jest": "^26.0.23",
		"@types/prettier": "^2.4.2",
		"@types/react-native": "^0.66.4",
		"@types/react-test-renderer": "^17.0.1",
		"babel-jest": "^26.6.3",
		"eslint": "^7.14.0",
		"jest": "^26.6.3",
		"metro-react-native-babel-preset": "^0.66.2",
		"prettier": "^2.4.1",
		"react-test-renderer": "17.0.2",
		"typescript": "^4.4.4"
	},
	"resolutions": {
		"@types/react": "^17"
	},
    "eslintConfig": {
        "root": true,
        "extends": [
          "@react-native-community",
          "prettier"
        ],
        "rules": {
          "prettier/prettier": [
            "error",
            {
              "quoteProps": "consistent",
              "singleQuote": true,
              "tabWidth": 4,
              "trailingComma": "es5",
              "useTabs": true
            }
          ]
        }
      },
      "eslintIgnore": [
        "node_modules/",
        "babel.config.js",
        "scripts/"
      ],
      "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": true
      },
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
